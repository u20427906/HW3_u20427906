

@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>

    <h4 style="color:blue"><i>All the images that have been uploaded:</i></h4>

@foreach (HW3_u20427906.Models.FileModel images in Model)
     {
         
            
                
                <div class="col-md-4">
                    <div class="card " style="margin:8px; width:25rem">

                       
                            <a href="~/Media/Images/@images.fileName" data-fancybox = "gallery" data-caption ="Optional caption">
                               
                                <img src="~/Media/Images/@images.fileName" width="230" height="230" />
                                 
                                <h4 class="card-title">@images.fileName</h4>
                                
                            </a>
                        

                        <button class="btn btn-success" style="color:white">
                            @Html.ActionLink("Download", "DownloadFile", new { fileName = images.fileName })
                        </button>

                        <button class="btn btn-danger">
                            @Html.ActionLink("Delete", "DeleteFile", new { fileName = images.fileName, style = "color: white" },

                            new
                            {
                                onclick = "return confirm('Do you want to delete this image?')"
                            })

                        </button>
                    </div>
                </div>

           
        
     }
 