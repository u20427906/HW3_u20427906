
@{
    ViewBag.Title = "Video";
}

<h2>Video</h2>
<h4 style="color:blue"><i>The videos that have been uploaded:</i></h4>


@foreach (HW3_u20427906.Models.FileModel videos in Model)
{



    <div class="col-md-4">
        <div style="margin:8px; width:18rem; border-color:Blue">


            <a  data-fancybox href="~/Media/Videos/@videos.fileName" id="click">

                <video src="~/Media/Videos/@videos.fileName " style="height:200px; width:150px;" />

                <h4>@videos.fileName</h4>

            </a>


            <button class="btn btn-success" style="color:white">
                @Html.ActionLink("Download", "DownloadFile", new { fileName = videos.fileName })
            </button>

            <button class="btn btn-danger">
                @Html.ActionLink("Delete", "DeleteFile", new { fileName = videos.fileName, style = "color: white" },

                new
                {
                    onclick = "return confirm('Do you want to delete this video?')"
                })
                
            </button>
        </div>

    </div>

    <script>
        $(document).ready(function () {
            $.fancybox.open('#gallery');
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="jquery.fancybox.min.js"></script>
}
